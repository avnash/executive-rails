<%= content_for :title do %>
  New Article
<% end %>

<% if signed_in? && current_user.usertype %>
<%= render "shared/sidebar" %>
  <div class="new_post_form post_main_container col-md-8"><div class="post_div correction">
  <h4 class="form_heading">New Article</h4><hr>

  <div class="form_container">
    <div class="row">
      <div class="span6 offset3">
        <%= form_for(:post, url: posts_path, method: 'post' , :html => { :class => "form-horizontal"}) do |f| -%>

          <%= f.label :title %><br>
        <%= f.text_field :title , class:"form-control" %><br><br>
        <%= f.label :content %><br>
        <%= f.bootsy_area :content, size: "80x12", class:"form-control" %><br><br>
	<input id="post_tag_ids_" name="post[tag_ids][]" type="hidden" value="<%=current_user.usertype %>">
        <div class="form-group" > 
     <%= f.label :files, class:"col-sm-2 control-label" %><br>
     <div  class="col-md-6">
	     <%= f.file_field :file_link , class:"form-control", multiple: true %><br><br>
        </div>
        </div>

        <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
        <br><br>
      <% end -%>

      </div>
    </div>
  </div>
</div>
</div>
<% else %>
 <%= render 'shared/unsigned' %>
<% end %>

