<% content_for :title do%>
  <%= @tag.name.capitalize %> articles
<% end %>

<% if signed_in? %>

  <%= render "shared/sidebar" %>
<br>
<div class="post_main_container">
<% if @posts.length!=0 %>
<% @user = @posts[0].user %>
<%= render 'shared/secretary_profile' %>
<% end %>
<% @posts.each do |post| %>
  <%= render post %>
<% end %>

<% if @posts.length>10 %>
    <%= render 'shared/loadmore' %>
<% end %>

<% if @posts.length==0 %>
  <div>No posts are active in this category.</div>
<% end %>
</div>
<% else %>

  <%= render 'shared/unsigned' %>

<%end%>
